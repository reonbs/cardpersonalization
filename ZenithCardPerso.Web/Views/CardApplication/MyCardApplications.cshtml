@model IEnumerable<ZenithCardRepo.Data.DTOs.CardApplicationsDTO>
@{
    /**/

    ViewBag.Title = "CardApplications";
}

<div class="row">
    <div class="col-xs-12">
        <div class="page-title-box">
            <h4 class="page-title">Card Applicatons</h4>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<br />

<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            @if (TempData["Message"] as string == "Success")
            {
                <div class="alert alert-icon alert-success alert-dismissible fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="mdi mdi-check-all"></i>
                    <span>Card Application Download was successful <a href="file:///c:\pc">Click to view downloads</a></span>
                </div>
            }
            <table id="tblRegistrations" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Office Phone No</th>
                        <th>Sex</th>
                        <th>Requesting Branch Code</th>
                        <th>Is Processed</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model?.ToList().Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.ActionLink(item.FullName, "GetRegistration", "Register", null, null)</td>
                                <td>@Html.DisplayFor(m => item.OfficePhoneNo)</td>
                                <td>@Html.DisplayFor(m => item.Sex)</td>
                                <td>@Html.DisplayFor(m => item.RequestingBranchCode)</td>
                                <td>@Html.DisplayFor(m => item.IsProcessed)</td>
                                <td>@Html.ActionLink("Edit","CardApplicationEdit", "CardApplication", new { ID = item.ID },null)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" style="text-align:center;">No Cards to be processed</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>