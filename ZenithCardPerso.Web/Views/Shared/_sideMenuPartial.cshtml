                    }

                    @if (User.IsInRole("SuperAdmin"))
                    {

                        <li>
                            <a href="@Url.Action("Roles","Account")">Roles</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Users","Account")">Users</a>
                        </li>
                        <li>
                            <a href="@Url.Action("AddSetting","Image")">Image Settings</a>
